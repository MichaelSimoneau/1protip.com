# Supabase (client)
EXPO_PUBLIC_SUPABASE_URL=<your-supabase-url>
EXPO_SECRET_SUPABASE_ANON_KEY=<your-supabase-anon-key>

# LinkedIn OAuth (client-side)
EXPO_PUBLIC_LINKEDIN_CLIENT_ID=<your-linkedin-client-id>
EXPO_PUBLIC_LINKEDIN_REDIRECT_URI=exp://localhost:8081/--/auth/linkedin/callback

# LinkedIn OAuth (Supabase Edge secrets â€“ set in Supabase, not shipped to the app)
LINKEDIN_CLIENT_ID=<your-linkedin-client-id>
LINKEDIN_CLIENT_SECRET=<your-linkedin-client-secret>

# LinkedIn OAuth (EAS/client secret for Expo build tools)
EXPO_SECRET_LINKEDIN_CLIENT_SECRET=<your-linkedin-client-secret>

# LinkedIn service fetch (unauthenticated feed sync)
# Use these so linkedin-get-posts can run without a Supabase session.
LINKEDIN_SERVICE_ACCESS_TOKEN=<app-level-linkedin-access-token>
LINKEDIN_SERVICE_PROFILE_ID=<urn-li-person-id-or-numeric-id>
LINKEDIN_SERVICE_AUTHOR_NAME="Michael Simoneau"
LINKEDIN_SERVICE_AVATAR_URL=https://example.com/avatar.jpg
LINKEDIN_SERVICE_HASHTAGS="#1protip,#protip"

